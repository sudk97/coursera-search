<form class="inputform" method="GET">
  <input type="text" name="looking_for" value="value" />
  <input type="submit" value="Search" />
</form>
<h1>Searching for - <%= @search_term%></h1>
<% if @courses.empty? %>
<p>No courses found</p>
<% else %>

<table border="1px">
	<tr>
	<th>Image</th>
	<th>Name</th>
	<th>Description</th>
	</tr>
	<% @courses.each do |course| %>

	<tr class=<%= cycle('odd','even') %>>
	<td><%= image_tag(course["photoUrl"], :size => "100x100") %></td>
	<td><%= course["name"] %></td>
	<td><%= course["description"] %></td>
	</tr>	

	<% end %>
</table>

<% end %>