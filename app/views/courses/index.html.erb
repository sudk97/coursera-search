<h1>Searching for - <%= @search_term%></h1>
<table border="1px">
	<tr>
	<th>Image</th>
	<th>Name</th>
	<th>Description</th>
	</tr>
	<% @courses.each do |course| %>

	<tr class=<%= cycle('odd','even') %>>
	<td><%= image_tag(course["photoUrl"], :size => "100x100") %></td>
	<td><%= course["name"] %></td>
	<td><%= course["description"] %></td>
	</tr>	

	<% end %>
</table>
